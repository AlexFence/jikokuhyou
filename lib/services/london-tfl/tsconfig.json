{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "coverage"
  ]
}
