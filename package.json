{
  "name": "jikokuhyou-monorepo",
  "private": true,
  "workspaces": [
    "webservice",
    "webapp",
    "lib/*",
    "lib/services/*"
  ],
  "devDependencies": {
    "lerna": "^3.13.1"
  },
  "scripts": {
      "postinstall": "yarn bootstrap",
      "bootstrap": "lerna bootstrap --use-workspaces",
      "build": "lerna run --parallel build",
      "build:lib": "lerna run --scope jikokuhyou-protocol --parallel build",
      "dev": "lerna run --parallel dev",
      "test": "lerna run test"
  }
}
