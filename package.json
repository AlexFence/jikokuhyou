{
  "name": "jikokuhyou-monorepo",
  "private": true,
  "workspaces": [
    "webservice",
    "webapp",
    "lib/*"
  ],
  "devDependencies": {
    "lerna": "^3.13.1"
  },
  "scripts": {
      "postinstall": "yarn bootstrap",
      "bootstrap": "lerna bootstrap --use-workspaces",
      "dev": "lerna run --scope jikokuhyou-webapp --scope jikokuhyou-webservice --parallel dev",
      "test": "lerna run test"
  }
}
